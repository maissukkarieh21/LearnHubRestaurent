@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-7 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title mb-0">Top Products</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-borderless">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Category Name</th>
                                    <th>Category Image</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <td>@item.Customerr.Fname @item.Customerr.Lname</td>
                                            <td class="font-weight-bold">@item.Product.Namee</td>
                                            <td>@item.ProductCustomerr.Quantity</td>
                                            <td class="font-weight-medium"><div class="badge badge-success">@item.Product.Price</div></td>
                                    <td class="font-weight-medium"><div class="badge badge-success">@item.Category.CategoryName</div></td>
                                            <td><img src="@Url.Content("~/Images/"+item.Category.ImagePath)" /></td>
                                        </tr>
                            }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 grid-margin stretch-card">
        </div>
    </div>

