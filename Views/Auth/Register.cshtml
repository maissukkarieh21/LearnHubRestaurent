@model LearnHubRestaurent.Models.Customerr

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/AuthAssets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/AuthAssets/css/style.css">
</head>
<body>
    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
						<form asp-action="Register" enctype="multipart/form-data" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="Fname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="Fname" placeholder="First Name" />
                            </div>
                            <div class="form-group">
                               <label asp-for="Lname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                               <input asp-for="Lname" placeholder="Last Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="ImageFile" />
                            </div>
                            <div class="form-group">
                                <label for="username"><i class="zmdi zmdi-email"></i></label>
                                <input name="username" id="username" placeholder="Your UserName" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="pass" id="pass" placeholder="Password" />
                                @if (ViewData.ModelState.ContainsKey("UserLogin.Password"))
                                {
                                    <span class="text-danger">@ViewData.ModelState["UserLogin.Password"].Errors.FirstOrDefault()?.ErrorMessage</span>
                                }
                            </div>
                            
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/AuthAssets/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>


    </div>

    <!-- JS -->
    <script src="~/AuthAssets/vendor/jquery/jquery.min.js"></script>
    <script src="~/AuthAssets/js/main.js"></script>

</body>
</html>
